@using MangakaApp.Models
@model List<Category>

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <li>
            <a class="dropdown-item text-light" 
               href="/Home/Category?slug=@item.Slug">
               @item.Name
            </a>
        </li>
    }
}
else
{
    <li><span class="dropdown-item text-muted">Đang tải...</span></li>
}