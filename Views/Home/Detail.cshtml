@model MangakaApp.Models.MangaDetailData

@{
    ViewData["Title"] = Model.Item.Name;
    // Lấy chương đầu tiên và mới nhất để gắn link cho nút Đọc
    var firstChapter = Model.Item.Chapters?.FirstOrDefault()?.ServerData?.FirstOrDefault(); // Thường data trả về mới nhất ở đầu, nên chương 1 nằm cuối
    var lastChapter = Model.Item.Chapters?.FirstOrDefault()?.ServerData?.LastOrDefault();

}

<style>
    /* 1. Animation mượt mà khi load trang */
    .animate-up {
        animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* 2. Hiệu ứng ảnh bìa */
    /* 1. Giới hạn kích thước của hộp chứa ảnh */
    .manga-cover-container {
        /* Đặt chiều rộng tối đa bạn mong muốn.
           Bạn có thể tăng/giảm số 250px này để vừa mắt nhất. */
        max-width: 250px;
        /* Tùy chọn: Căn giữa ảnh nếu hộp chứa nhỏ hơn màn hình */
        margin-left: auto;
        margin-right: auto;
    }

    /* 2. Làm cho ảnh phản hồi (responsive) */
    .manga-cover {
        /* Ảnh sẽ luôn chiếm 100% chiều rộng của hộp chứa nó */
        width: 100%;
        /* Chiều cao tự động điều chỉnh để ảnh không bị méo */
        height: auto;
        /* Loại bỏ khoảng trắng thừa nhỏ bên dưới ảnh (thường gặp với thẻ img) */
        display: block;
        /* Tùy chọn thêm: Bo tròn góc nhẹ và đổ bóng để trông đẹp hơn */
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    /* 3. Badge và Label */
    .badge-custom {
        padding: 8px 12px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    /* 4. Khung danh sách chương */
    .chapter-box {
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        background: #fff;
        overflow: hidden;
    }

    .chapter-header {
        background: #f8f9fa;
        padding: 15px;
        border-bottom: 1px solid #e0e0e0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chapter-list {
        max-height: 400px; /* Giới hạn chiều cao */
        overflow-y: auto; /* Cho phép cuộn */
        padding: 0;
        margin: 0;
        list-style: none;
    }

    .chapter-item {
        display: flex;
        justify-content: space-between;
        padding: 12px 20px;
        border-bottom: 1px solid #f1f1f1;
        transition: background 0.2s;
        text-decoration: none;
        color: #333;
    }

        .chapter-item:hover {
            background-color: #f0f8ff;
            color: #0d6efd;
        }
    /* Tùy chỉnh thanh cuộn cho đẹp */
    .chapter-list::-webkit-scrollbar {
        width: 6px;
    }

    .chapter-list::-webkit-scrollbar-thumb {
        background-color: #ccc;
        border-radius: 4px;
    }

    /* Nút đọc nổi bật */
    .btn-read-action {
        width: 100%;
        margin-top: 10px;
        padding: 10px;
        font-weight: bold;
        border-radius: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s;
    }

        .btn-read-action:hover {
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.4);
            transform: translateY(-2px);
        }

          .transition-effect {
                    transition: all 0.2s ease-in-out;
                }
                .transition-effect:hover {
                    background-color: #e9ecef !important; /* Màu xám đậm hơn chút khi di chuột */
                    transform: translateY(-2px); /* Nhảy nhẹ lên */
                    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                }

    .transition-hover {
        transition: all 0.2s ease;
    }
        /* Khi di chuột vào category, nút nảy lên nhẹ và đổi màu */
        .transition-hover:hover {
            transform: translateY(-2px);
            background-color: #0d6efd; /* Màu xanh primary */
            border-color: #0d6efd;
            color: white;
            box-shadow: 0 4px 6px rgba(13, 110, 253, 0.2);
        }
</style>

<div class="container py-5 animate-up">
    <div class="card border-0 shadow-sm mb-5" style="border-radius: 16px; overflow: hidden;">
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-4 col-lg-3 text-center">
                    <div class="manga-cover-container mb-3">
                        <img src="@(string.IsNullOrEmpty(ViewData["ThumbUrl"]?.ToString()) ? "/imgs/nophoto.png" : ViewData["ThumbUrl"])"
                             class="manga-cover"
                             alt="@Model.Item.Name">
                    </div>

                    <div class="d-grid gap-2">
                        @if (firstChapter != null)
                        {
                            <a href="@Url.Action("Read", "Home", new { slug = ViewContext.RouteData.Values["slug"], chapter = firstChapter.ChapterName })"
                               class="btn btn-primary btn-read-action">
                                <i class="bi bi-book-half me-2"></i> Đọc ngay
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-read-action" disabled>Chưa có chương</button>
                        }
                    </div>
                </div>

                <div class="col-md-8 col-lg-9">
                    <h1 class="fw-bold mb-3 text-dark">@Model.Item.Name</h1>

                    <div class="mb-3">
                        <span class="text-muted me-2"><i class="bi bi-pencil-fill"></i> Tác giả:</span>
                        @if (Model.Item.Author != null && Model.Item.Author.Any())
                        {
                            <span class="fw-bold text-primary">@string.Join(", ", Model.Item.Author)</span>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Đang cập nhật</span>
                        }
                    </div>

                    <div class="mb-4 d-flex align-items-center">
                        <span class="text-secondary text-uppercase fw-bold me-3" style="font-size: 0.8rem; letter-spacing: 1px;">
                            <i class="bi bi-info-circle-fill me-1"></i> Trạng thái :
                        </span>

                        @{
                            var currentStatus = Model.Item.Status; // Lấy giá trị status (string)

                            string statusClass = "";
                            string statusIcon = "";
                            string statusText = "";

                            switch (currentStatus)
                            {
                                case "completed":
                                    statusClass = "bg-success bg-opacity-10 text-success border-success"; // Xanh lá
                                    statusIcon = "bi-check-circle-fill";
                                    statusText = "Hoàn thành";
                                    break;

                                case "ongoing":
                                    statusClass = "bg-warning bg-opacity-10 text-warning border-warning"; // Vàng cam
                                    statusIcon = "bi-hourglass-split";
                                    statusText = "Đang phát hành";
                                    break;

                                case "coming_soon":
                                    statusClass = "bg-info bg-opacity-10 text-info border-info"; // Xanh dương
                                    statusIcon = "bi-clock-history";
                                    statusText = "Sắp ra mắt";
                                    break;

                                default:
                                    // Trường hợp không xác định hoặc null
                                    statusClass = "bg-secondary bg-opacity-10 text-secondary border-secondary"; // Xám
                                    statusIcon = "bi-question-circle";
                                    statusText = "Đang cập nhật";
                                    break;
                            }
                        }

                        <span class="badge rounded-pill border @statusClass px-3 py-2 d-flex align-items-center">
                            <i class="bi @statusIcon me-2"></i>
                            <span class="fw-bold">@statusText</span>

                            @if (currentStatus == "ongoing")
                            {
                                <span class="spinner-grow spinner-grow-sm ms-2 text-warning" role="status" aria-hidden="true" style="width: 0.5rem; height: 0.5rem;"></span>
                            }
                        </span>
                    </div>

                    <div class="mb-4">
                        <span class="text-secondary text-uppercase fw-bold d-block mb-2" style="font-size: 0.8rem; letter-spacing: 1px;">
                            <i class="bi bi-tags-fill me-1"></i> Thể loại :
                        </span>

                        <div class="d-flex flex-wrap gap-2">
                            @if (Model.Item.Category != null && Model.Item.Category.Any())
                            {
                                foreach (var cat in Model.Item.Category)
                                {
                                    <a asp-controller="Home" asp-action="Category" asp-route-slug="@cat.Slug"
                                       class="btn btn-sm btn-outline-secondary rounded-pill px-3 transition-hover">
                                        #@cat.Name
                                    </a>
                                }
                            }
                            else
                            {
                                <span class="text-muted fst-italic small">
                                    <i class="bi bi-exclamation-circle"></i> Đang cập nhật...
                                </span>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold border-bottom pb-2"><i class="bi bi-file-text"></i> Nội dung :</h5>
                        <div class="text-secondary" style="line-height: 1.6;">
                            @Html.Raw(Model.Item?.Content)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="chapter-box shadow-sm">
        <div class="chapter-header">
            <h4 class="text-black mb-0 fw-bold"><i class="bi bi-list-ul me-2"></i> Danh sách chương :</h4>

            <button class="btn btn-outline-secondary btn-sm rounded-pill" onclick="toggleSort()">
                <i class="bi bi-arrow-down-up me-1"></i> <span id="sortLabel">Mới nhất</span>
            </button>
        </div>

        <div class="chapter-list-container">
            @if (Model.Item?.Chapters != null && Model.Item.Chapters.Any())
            {
                // Lấy server đầu tiên (thường là server chính)
                var server = Model.Item.Chapters.First();

                if (server.ServerData != null)
                {
                    <ul class="chapter-list" id="chapterList">
                        @foreach (var chapter in server.ServerData)
                        {
                            string readLink = Url.Action("Read", "Home", new { slug = ViewContext.RouteData.Values["slug"], chapter = chapter.ChapterName });

                            <li>
                                <a href="@readLink" class="chapter-item">
                                    <span class="fw-bold">Chương @chapter.ChapterName</span>
                                    <span class="text-muted small">
                                        @chapter.ChapterTitle
                                    </span>
                                </a>
                            </li>
                        }
                    </ul>
                }
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                    Chưa có chương nào được cập nhật.
                </div>
            }
        </div>
    </div>
</div>

<script>
    let isNewest = true; // Mặc định là mới nhất

    function toggleSort() {
        const list = document.getElementById('chapterList');
        if (!list) return;

        // Lấy tất cả các thẻ li trong danh sách
        const items = Array.from(list.children);

        // Đảo ngược mảng các phần tử
        items.reverse();

        // Xóa danh sách hiện tại và thêm lại các phần tử đã đảo
        list.innerHTML = '';
        items.forEach(item => list.appendChild(item));

        // Cập nhật trạng thái và nhãn nút
        isNewest = !isNewest;
        const label = document.getElementById('sortLabel');
        label.innerText = isNewest ? "Mới nhất" : "Cũ nhất";

        // Hiệu ứng visual cho người dùng biết vừa sắp xếp
        list.classList.add('animate-up');
        setTimeout(() => list.classList.remove('animate-up'), 500);
    }
</script>